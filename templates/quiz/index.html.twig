{% extends 'base.html.twig' %}

{% block title %}Quiz{% endblock %}

{% block body %}
    <div class="container">
        {% if submitted %}
            <h1>Score final: {{ score }}/10</h1>
            
        {% else %}
            <h1>Quiz</h1>
            <form method="post" action="{{ path('app_quiz') }}">
                {% for question in questions %}
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ question.question }}</h5>
                            {% for answer in question.all_answers %}
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="answer_{{ loop.index }}" id="answer_{{ loop.index }}" value="{{ answer }}" required>
                                    <label class="form-check-label" for="answer_{{ loop.index }}">{{ answer }}</label>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
                <button type="submit" class="btn btn-primary">Valider</button>
            </form>
        {% endif %}
    </div>
{% endblock %}