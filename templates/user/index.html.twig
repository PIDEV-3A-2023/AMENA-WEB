	<form method="get" action="{{ path('app_user_index') }}">
		<div class="input-group mb-3">
			<input type="text" name="q" class="form-control" placeholder="Search users...">
			<div class="input-group-append">
				<button type="submit" class="btn btn-outline-secondary">Search</button>
			</div>
		</div>
	</form>

	<div class="container-fluid p-0">
		<a class="btn btn-secondary" href="{{ path('app_user_new') }}">Register</a>
		
		<h1 class="h3 mb-3">Blank Page</h1>

		<div class="row">
			<div class="col-12" style="overflow-x: scroll">


					{# total items count #}
				<div class="count">
					{{ pagination.getTotalItemCount }}
				</div>
				<table>
					<tr>
						{# sorting of properties based on query components #}
						<th>{{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}</th>
						<th{% if pagination.isSorted('a.Title') %} class="sorted"{% endif %}>
							{{ knp_pagination_sortable(pagination, 'Title', 'a.title') }}
						</th>
						<th{% if pagination.isSorted(['a.date', 'a.time']) %} class="sorted"{% endif %}>
							{{ knp_pagination_sortable(pagination, 'Release', ['a.date', 'a.time']) }}
						</th>
					</tr>

					{# table body #}
					{% for article in pagination %}
						<tr {% if loop.index is odd %}class="color"{% endif %}>
							<td>{{ article.id }}</td>
							<td>{{ article.email }}</td>
							{# <td>{{ article.date | date('Y-m-d') }}, {{ article.time | date('H:i:s') }}</td> #}
						</tr>
					{% endfor %}
				</table>
				{# display navigation #}
				<div class="navigation">
					{{ knp_pagination_render(pagination) }}
				</div>



