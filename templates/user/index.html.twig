																		<i class="fa fa-pencil">
																			<i class="fa fa-pencil"></i>
																		</a>

																		<a href="{{ path('app_user_edit', {'id': u.id}) }}" class="btn btn-outline-primary">Edit
																			<i class="fa fa-pencil">
																				<i class="fa fa-pencil"></i>
																			</a>
																			<a href="{{ path('app_user_delete', {'id': u.id}) }}" class="btn btn-outline-primary">Delete
